<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:background="#FFFFFF">
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">


    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="First Name: "
                  android:textSize="15dp"
                  android:textColor="#000000"
                />

        <EditText android:id="@+id/firstName"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/edittext_bg"
                  android:padding="10dp"
                  android:textColorHint="#cccccc"
                  android:drawableLeft="@drawable/user"
                  android:shadowColor="#808080"
                  android:layout_marginBottom="15dp"
                  android:textColor="#000000"
                  android:textCursorDrawable="@null"
                />

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Last Name: "
                android:textSize="15dp"
                android:textColor="#000000"
                />

        <EditText android:id="@+id/lastName"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/edittext_bg"
                  android:padding="10dp"
                  android:textColorHint="#cccccc"
                  android:drawableLeft="@drawable/user"
                  android:shadowColor="#808080"
                  android:layout_marginBottom="15dp"
                  android:textColor="#000000"
                  android:textCursorDrawable="@null"
                />

        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="Email: "
                  android:textSize="15dp"
                  android:textColor="#000000"/>

        <EditText android:id="@+id/email"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/edittext_bg"
                  android:padding="10dp"
                  android:textColorHint="#cccccc"
                  android:drawableLeft="@drawable/email"
                  android:shadowColor="#808080"
                  android:layout_marginBottom="15dp"
                  android:textColor="#000000"
                  android:textCursorDrawable="@null"
                  android:inputType="textEmailAddress"
                />

        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="Birth Day"
                  android:textSize="15dp"
                  android:textColor="#000000"/>

        <EditText android:id="@+id/birthDay"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/edittext_bg"
                  android:padding="10dp"
                  android:textColorHint="#cccccc"
                  android:drawableLeft="@drawable/cake"
                  android:shadowColor="#808080"
                  android:layout_marginBottom="15dp"
                  android:textColor="#000000"
                  android:textCursorDrawable="@null"
                />

        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="Phone Number: "
                  android:textSize="15dp"
                  android:textColor="#000000"
                />

        <EditText android:id="@+id/mobile"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/edittext_bg"
                  android:padding="10dp"
                  android:textColorHint="#cccccc"
                  android:drawableLeft="@drawable/phone"
                  android:shadowColor="#808080"
                  android:layout_marginBottom="15dp"
                  android:textColor="#000000"
                  android:textCursorDrawable="@null"
                  android:inputType="phone"
                />

        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="Position: "
                  android:textSize="15dp"
                  android:textColor="#000000"/>

        <EditText android:id="@+id/position"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/edittext_bg"
                  android:padding="10dp"
                  android:textColorHint="#cccccc"
                  android:drawableLeft="@drawable/position"
                  android:shadowColor="#808080"
                  android:layout_marginBottom="15dp"
                  android:textColor="#000000"
                  android:textCursorDrawable="@null"
                />


        <TextView android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="Team: "
                  android:textSize="15dp"
                  android:textColor="#000000"/>

        <EditText android:id="@+id/team"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/edittext_bg"
                  android:padding="10dp"
                  android:textColorHint="#cccccc"
                  android:drawableLeft="@drawable/team"
                  android:shadowColor="#808080"
                  android:layout_marginBottom="15dp"
                  android:textColor="#000000"
                  android:textCursorDrawable="@null"

                />


        <Button  android:id="@+id/editBtn"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="10dp"
                 android:layout_margin="4dp"
                 android:text="Edit"
                 style="@style/DefaultButtonText"
                 android:background="@drawable/button_default_bg"
                 android:layout_marginBottom="15dp"/>
    </LinearLayout>

</ScrollView>
</RelativeLayout>